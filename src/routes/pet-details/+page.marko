<script>
    async function getAnimal() {
            var response = await fetch("https://mongoapi.adaptable.app/api/getAllAnimal");
            var result = await response.json();
            // pet name input
            var inputPetName = document.getElementById('petName');
            var nomeAnimal = result[0].nomeAnimal;
            inputPetName.value = nomeAnimal;

            // pet genre input
            var inputPetGenre = document.getElementById('petGenre');
            var sexo = result[0].sexo;
            inputPetGenre.value = sexo;
           
           // pet race input
            var inputPetRace = document.getElementById('petRace');
            var race = result[0].tipoRaca;
            inputPetRace.value = race;

            // pet castration input
            var inputPetCastration = document.getElementById('petCastration');
            var castration = result[0].Castracao;
            inputPetCastration.value = castration;

            // pet age input
            var inputPetAge = document.getElementById('petAge');
            var age = result[0].idade;
            inputPetAge.value = age;

            // pet Animal type
            var inputAnimalType = document.getElementById('petType');
            var petType = result[0].tipoAnimal;
            inputAnimalType.value = petType;


    }
    getAnimal()
</script>

